<html lang="en">
    <%- include("partials/header.ejs") %>
<body>
  <div class="blogs content">
    <h2>All Blogs</h2>

    <% if (blogs.length > 0) { %>
      <% blogs.forEach(blog => { %>
        <ul>
            <li class="item">
              <img src="/cool.png" alt="cool image">
              <a class="black" href="/<%= blog._id %>">
              <h3 class="black"><%= blog.title %></h3>
              <p class="black"><%= blog.snippet %></p>
            </li>
        </ul>
      <% }) %>
    <% } else { %>
      <p>There are no blogs to display...</p>
    <% } %>
    
  </div>
  <%- include("partials/footer.ejs") %>
</body>
</html>

